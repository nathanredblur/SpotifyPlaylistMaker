# Spotify API Configuration
PUBLIC_SPOTIFY_CLIENT_ID=your_spotify_client_id_here

# Redirect URIs for OAuth callback (backend endpoint)
PUBLIC_SPOTIFY_REDIRECT_URI_LOCAL=http://127.0.0.1:4321/api/auth/callback
PUBLIC_SPOTIFY_REDIRECT_URI_REMOTE=https://your-domain.com/api/auth/callback

# SoundCharts API Configuration (OPTIONAL - for audio features)
# Get your credentials from https://soundcharts.com/
SOUNDCHARTS_APP_ID=your_soundcharts_app_id_here
SOUNDCHARTS_API_TOKEN=your_soundcharts_api_token_here

# Database Configuration
DB_PATH=./data/spotify-cache.db

# Environment
NODE_ENV=development
